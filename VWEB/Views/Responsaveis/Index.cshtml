@model IEnumerable<VWEB.Models.Responsavel>

@{
    ViewBag.Title = "Index";
}

<h2>Responsáveis</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndNumero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndComplemento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone2)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.TipoResponsavel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sobrenome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndNumero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndComplemento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoResponsavel)
        </td>
        <td>
            <a href="/Responsaveis/Edit/@item.Id" class="btn btn-dark-green lighten-2">
                <i class="fas fa-edit text-white"></i>
            </a>
            <a href="/Responsaveis/Delete/@item.Id" class="btn deep-orange lighten-2">
                <i class="fas fa-trash text-white">
                </i>
            </a>
        </td>
    </tr>

}

</table>
