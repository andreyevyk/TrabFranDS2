@model IEnumerable<VWEB.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Usuários</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>Ações</th>
    </tr>

@foreach (var item in Model) {
    <tr class="">
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sobrenome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a href="/Usuarios/Edit/@item.Id" class="btn btn-dark-green lighten-2" >
                <i class="fas fa-edit text-white" ></i>
            </a>
            <a href="/Usuarios/Delete/@item.Id" class="btn deep-orange lighten-2" >
                <i class="fas fa-trash text-white">
                </i>
            </a>
        </td>
    </tr>
}

</table>
